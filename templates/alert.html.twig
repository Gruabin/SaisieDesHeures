<turbo-stream action="replace" target="flash-messages">
    <template>
        {% for message in app.flashes('success') %}
            <div class="bg-green-900 text-center py-4 lg:px-4 relative" id="flasheSuccess">
                <div class="p-2 bg-green-800 items-center text-green-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                    <span class="flex rounded-full bg-green-500 uppercase px-2 py-1 text-xs font-bold mr-3">
                        Succ√®s
                    </span>
                    <span class="font-semibold mr-2 text-left flex-auto">
                        {{ message }}
                    </span>
                </div>
                <button class="absolute inset-y-0 right-0 mx-4 " onclick="this.parentNode.style.display = 'none'"><i class="fa-solid fa-xmark text-white"></i></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="bg-red-900 text-center py-4 lg:px-4  relative" id="flasheError">
                <div class="p-2 bg-red-800 items-center text-red-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                    <span class="flex rounded-full bg-red-500 uppercase px-2 py-1 text-xs font-bold mr-3">
                        Erreur
                    </span>
                    <span class="font-semibold mr-2 text-left flex-auto">
                        {{ message }}
                    </span>
                </div>
                <button class="absolute inset-y-0 right-0 mx-4 " onclick="this.parentNode.style.display = 'none'"><i class="fa-solid fa-xmark text-white"></i></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="bg-orange-900 text-center py-4 lg:px-4  relative" id="flasheWarning">
                <div class="p-2 bg-orange-800 items-center text-red-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                    <span class="flex rounded-full bg-orange-500 uppercase px-2 py-1 text-xs font-bold mr-3">
                        Attention
                    </span>
                    <span class="font-semibold mr-2 text-left flex-auto">
                        {{ message }}
                    </span>
                </div>
                <button class="absolute inset-y-0 right-0 mx-4 " onclick="this.parentNode.style.display = 'none'"><i class="fa-solid fa-xmark text-white"></i></button>
            </div>
        {% endfor %}

    </template>
</turbo-stream>