{% extends 'base.html.twig' %}

{% block title %}
    Saisie des heures | Historique
{% endblock %}

{% block body %}
    <div class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-[#f5f5f5] border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md">
        <h2 class="text-center text-4xl text-gruau-dark-blue font-bold">Synthèse employé</h2>
        <hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
            <div class="flex flex-row items-center space-x-2 p-2">
                <div class="m-2 flex-1">
                    <div class="m-2">
                        <b>Employé</b>
                    </div>
                    <div class="m-2">{{ user.id }}
                        {{ user.nomEmploye }}
                    </div>
                </div>
                <div class="m-2 flex-1">
                    <div class="m-2">
                        <b>Centre de charge</b>
                    </div>
                    <div class="m-2">{{ user.centreDeCharge.id }}
                        {{ user.centreDeCharge.descriptionCDG }}
                    </div>
                </div>
                <div class="m-2 flex-1">
                    <div class="m-2">
                        <b>Date</b>
                    </div>
                    <div class="m-2">{{ "now"|date("d/m/Y", "Europe/Paris") }}
                </div>
            </div>
            <div class="m-2 flex-1">
                <div class="m-2">
                    <b>Temps journalier</b>
                </div>
                <div class="m-2">
                    <span>
                        {% set total = 0 %}
                        {% for heures in details %}
                            {% if heures.employe.id == user.id %}                            
                                {% set total = total + heures.tempsMainOeuvre %}
                            {% endif %}
                        {% endfor %}
                        {% if total > 0 %}
                            {{ total }}
                            heures
                        {% endif %}
                    </span>
                </div>
            </div>
            <div class="m-2 flex-1">
                <div class="m-2">
                    <a class="btn btn-primary mt-5" href="{{ path('temps') }}">
                        Saisie des heures
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-[#f5f5f5] border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md">
        <h2 class="text-center text-4xl text-gruau-dark-blue font-bold">Détails des heures</h2>
        <hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
        <div class="flex flex-row flex-wrap items-center space-x-2 p-2">
            <table class="table-auto w-full">
                <thead>
                    <tr>
                        <th>Date de transaction</th>
                        <th>Type d'heure</th>
                        <th>Ordre</th>
                        <th>Opération</th>
                        <th>Tâche</th>
                        <th>Centre de charge</th>
                        <th>Temps main d'œuvre</th>
                    </tr>
                </thead>
                <tbody>
                    {% for heures in details %}
                        <tr>
                            <td class="text-center">
                                {{ heures.date|date('d/m/Y H:i') }}
                            </td>
                            <td class="text-center">
                                {% if (heures.typeHeures.nomType is not empty) %}
                                    {{ heures.typeHeures.nomType }}
                                {% endif %}
                            <td class="text-center">
                                {% if (heures.ordre is not empty) %}
                                    {{ heures.ordre.descriptionOrdre }}
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if (heures.operation is not empty) %}
                                    {{ heures.operation.descriptionOperation }}
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if (heures.tache is not empty) %}
                                    {{ heures.tache.id }} - {{ heures.tache.nomTache }}
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if (heures.centreDeCharge is not empty) %}
                                    {{ heures.centreDeCharge.id}} - {{ heures.centreDeCharge.descriptionCDG }}
                                {% endif %}
                            </td>
                        <td class="text-center">{{ heures.tempsMainOeuvre }}
                            heures
                        </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="m-2 flex-1">
            <div class="m-2 text-center">
                <a class="btn btn-primary mt-5" href="{{ path('temps') }}">
                    Saisie des heures
                </a>
            </div>
        </div>
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    {% endblock %}
