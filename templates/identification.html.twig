{% extends 'base.html.twig' %}
{% block title %}Identification
{% endblock %}
{% block body %}
    <dialog class="bg-red-900 text-center py-4 lg:px-4 relative invisible" id="flasheError">
        <div class="p-2 bg-red-800 items-center text-red-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
            <span class="flex rounded-full bg-red-500 uppercase px-2 py-1 text-xs font-bold mr-3">
                Erreur
            </span>
            <span id="text" class="font-semibold mr-2 text-left flex-auto">
                
            </span>
        </div>
        <button class="absolute inset-y-0 right-0 mx-4 " data-dismiss-target="#flasheError" aria-label="Close"><i class="fa-solid fa-xmark text-white"></i></button>
    </dialog>
    <div class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-[#f5f5f5] border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md text-center">
        <h1 class="text-center text-4xl text-gruau-dark-blue font-bold">Identification</h1>
        <hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
        <div class="flex flex-row justify-center items-center space-x-2">
            <label for="inputEmploye">Code employé </label>
            <input class="input input-primary" type="text" maxlength="9" name="inputEmploye" id="inputEmploye">
            <p id="informationEmploye">Information employé</p>
        </div>
        <input type="hidden" name="token" id="loginToken" value="{{ csrf_token('loginToken') }}">
        <button class="btn btn-primary btn-outline mt-5 btn-disabled" id="btnConnexion">Continuer</button>
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('connexion') }}
    {% endblock %}
{% endblock %}
