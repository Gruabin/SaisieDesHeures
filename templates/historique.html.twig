{% trans_default_domain 'historique' %}
{% extends 'base.html.twig' %}
{% block title %}
    {{'Saisie des heures'|trans}} | {{'Historique'|trans}}
{% endblock %}
{% block body %}
    <section class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-neutral-100 border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md">
        <h2 class="text-center text-4xl text-gruau-dark-blue font-bold">{{'Synthèse employé'|trans}}</h2>
        <hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
        <div class="flex flex-col lg:flex-row lg:items-center p-2">
            <div class="m-2 flex-1">
                <div class="m-2">
                    <b>{{'Employé'|trans}}</b>
                </div>
                <div class="m-2">{{ user.id }}
                    {{ user.nomEmploye }}
                </div>
            </div>
            <div class="m-2 flex-1">
                <div class="m-2">
                    <b>{{'Centre de charge'|trans}}</b>
                </div>
                <div class="m-2">
                    {{ user.centreDeCharge.id }}
                </div>
            </div>
            <div class="m-2 flex-1">
                <div class="m-2">
                    <b>{{'Date'|trans}}</b>
                </div>
                <div class="m-2">{{ 'now'|date('d/m/Y', 'Europe/Paris') }}
                </div>
            </div>
            <div class="m-2 flex-1">
                <div class="m-2">
                    <b>{{'Temps journalier'|trans}}</b>
                </div>
                <div class="m-2">
                    <span>
                        {% if nbHeures > 0 %}
                            {{ nbHeures }}
                            {% if nbHeures < 2 %}
                                {{'heure'|trans}}
                            {% else %}
                                {{'heures'|trans}}
                            {% endif %}
                        {% endif %}
                    </span>
                </div>
            </div>
            <div class="m-2 flex-1">
                <a class="btn btn-primary mt-5" href="{{ path('temps') }}"  target="_self">
                    {{'Saisie des heures'|trans}}
                </a>
            </div>
        </div>
    </section>
    <section class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-neutral-100 border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md">
        <h2 class="text-center text-4xl text-gruau-dark-blue font-bold">{{'Détails des heures'|trans}}</h2>
        <hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
        <div class="flex flex-row flex-wrap items-center space-x-2 p-2">
            <table class="table-fixed w-full">
                <thead>
                <tr class="flex">
                    <th class="hidden basis-1/6 lg:block">{{'Date de transaction'|trans}}</th>
                    <th class="basis-1/6">{{"Type d'heure"|trans}}</th>
                    <th class="basis-1/2">
                        <span class="block md:inline">{{'Ordre'|trans}}</span>
                        <span class="hidden md:inline"> | </span>
                        <span class="block md:inline">{{'Opération'|trans}}</span>
                        <span class="hidden md:inline"> | </span>
                        <span class="block md:inline">{{'Activité'|trans}}</span>
                        <span class="hidden md:inline"> | </span>
                        <span class="block md:inline">{{'Tâche'|trans}}</span>
                        <span class="hidden md:inline"> | </span>
                        <span class="block md:inline">{{'Centre de charge'|trans}}</span>
                        <span class="hidden md:inline"> | </span>
                        <span class="block md:inline">{{'Tâche spécifique'|trans}}</span>
                    </th>
                    <th class="basis-1/6">{{"Temps main d'œuvre"|trans}}</th>
                </tr>
                </thead>
                <tbody>
                {% for heures in details %}
                    <tr class="flex">
                        <td class="text-center basis-1/6 hidden lg:block">
                            {{ heures.date|date('d/m/Y H:i') }}
                        </td>
                        <td class="text-center basis-1/6">
                            {% if (heures.typeHeures.nomType is not empty) %}
                                {{ heures.typeHeures.nomType }}
                            {% endif %}
                        <td class="text-center basis-1/2">
                            {% set name = [] %}
                            {% if (heures.ordre is not empty) %}
                                {% set name = name|merge({'ordre': heures.ordre}) %}
                            {% endif %}
                            {% if (heures.operation is not empty) %}
                                {% set name = name|merge({'operation': heures.operation}) %}
                            {% endif %}
                            {% if (heures.activite is not empty) %}
                                {% set name = name|merge({'activite': heures.activite.name}) %}
                            {% endif %}
                            {% if (heures.tache is not empty) %}
                                {% set name = name|merge({'tache': heures.tache.name}) %}
                            {% endif %}
                            {% if (heures.centreDeCharge is not empty) %}
                                {% set name = name|merge({'centreDeCharge': heures.centreDeCharge.name}) %}
                            {% endif %}
                            {% if (heures.tacheSpecifique is not empty) %}
                                {% set name = name|merge({'tacheSpecifique': heures.tacheSpecifique.name}) %}
                            {% endif %}
                            {{ name|join('  |  ') }}
                        </td>
                        <td class="text-center basis-1/6">{{ heures.tempsMainOeuvre }}
                            {{'heures'|trans}}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="m-2 flex-1">
            <div class="m-2 text-center">
                <a class="btn btn-primary mt-5" href="{{ path('temps') }}" target="_self">
                    {{'Saisie des heures'|trans}}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
