{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="mx-24 my-16 max-2xl:mx-8 max-lg:mx-4 max-sm:mx-1 rounded-md bg-[#f5f5f5] border-b-[5px] border-gruau-red py-6 text-lg max-sm:text-base shadow-md text-center">
		<h1 class="text-center text-4xl text-gruau-dark-blue font-bold">POC !</h1>
		<hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
		<div class="flex flex-row justify-center items-center space-x-2">
			<label for="inputEmploye">Id employé:
			</label>
			<input type="text" maxlength="9" name="employe" id="inputEmploye">
			<p id="informationEmploye">Information employé</p>
		</div>

		<hr class="w-14 mx-auto h-[3px] bg-gruau-red my-6 text-gruau-red">
		<div class="flex flex-row justify-center items-center space-x-2">
			<label for="inputEmploye2">Id employé:
			</label>
			<input type="text" maxlength="9" name="employe" id="inputEmploye2">
			<p id="informationEmploye2">Information employé</p>
		</div>
		<button class="btn btn-primary btn-outline mt-5 btn-disabled" id="btnConnexion">Connexion<button/>
		</div>
		<div class="text-center">
			<a class="btn btn-info btn-outline" href="{{ path('temps') }}">
				page saisie des temps</a>
		</div>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ encore_entry_script_tags('connexion') }}
		{% endblock %}
	{% endblock %}
